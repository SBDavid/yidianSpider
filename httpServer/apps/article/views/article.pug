html
	head
		title= article.title
		meta(charset='UTF-8')
		meta(name="viewport" content="width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no")
		link(rel='stylesheet', href='http://' + config.domain.static.domain + ':' + config.domain.static.host + '/static/css/base.css')
		link(rel='stylesheet', href='http://' + config.domain.static.domain + ':' + config.domain.static.host + '/article/static/css/article.css')
		script
			| (function (designW) {
			|	var docEl = document.documentElement,
			|		resizeEvt = 'orientationchange' in window ? 'orientationchange' : 'resize',
			|		recalc = function () {
			|				var clientWidth = docEl.clientWidth;
			|			if (!clientWidth) return;
			|			docEl.style.fontSize = 100 * (clientWidth / designW) + 'px';
			|		};
			|	if (!document.addEventListener) return;
			|		recalc();
			|	window.addEventListener(resizeEvt, recalc, false);
			|	document.addEventListener('DOMContentLoaded', recalc, false);
			|})(750);
		script(src='http://' + config.domain.static.domain + ':' + config.domain.static.host + '/static/js/jquery.js')
		
	body
		div.header.bottom-1px
			h1 #{article.title}
			div(class='article-info') #{article.date}
		div.body
			ul
				each imageInfo in article.content
					li
						img(src=imageInfo.url)