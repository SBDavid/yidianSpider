mixin article(article, currentCateloge, index)
    a(class= 'article-list-item bottom-1px', href="/article/"+article.itemid+"?cateloge="+currentCateloge + "&index=" +index)
        h2.title #{article.title}
        ul.img-list.cf
            each img in article.surface
                li
                    img(data-original=img, alt="")
        p.article-info 
            span #{article.date}
            if article.readCount > 0
                span #{'阅读' + article.readCount}